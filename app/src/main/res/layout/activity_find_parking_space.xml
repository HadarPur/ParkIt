<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backactivity"
    tools:context="com.example.hadar.parkit.FindParkingSpaceActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mytitle"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Find Parking Space"
        android:textColor="@android:color/white"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/mybutton"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Please enter parking information"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="96dp"
        android:background="@drawable/mybutton"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="serif"
        android:text="Destination:"
        android:textColor="@android:color/white"
        android:textSize="22dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView"
        android:background="@drawable/mybutton"
        android:backgroundTint="@android:color/background_light"
        android:fontFamily="serif"
        android:textColor="@android:color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText"
        android:layout_marginTop="24dp"
        android:background="@drawable/mybutton"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="serif"
        android:text="Walk:"
        android:textColor="@android:color/white"
        android:textSize="22dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner"
        android:fontFamily="serif"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:backgroundTint="@android:color/background_light"
        android:background="@drawable/mybutton"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView2" />

    <Button
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="58dp"
        android:background="@drawable/mybutton"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="serif"
        android:text="Search"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:textStyle="bold" />
</RelativeLayout>
